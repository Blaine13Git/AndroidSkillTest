<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.windsing.androidskilltest.MainActivity">

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:indeterminate="false"
        android:max="10"
        android:padding="4dip" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_below="@id/progressBar1"
        android:layout_marginTop="10dp"
        android:text="MainPage for Progrress Bar!"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startProgress"
        android:text="ProgressBar"
        android:textAllCaps="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startPage02"
        android:text="Click"
        android:textAllCaps="false"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActionBar"
        android:id="@+id/button6"
        android:textAllCaps="false"
        android:onClick="goStartActionBar"
        android:layout_above="@+id/button9"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socket"
        android:id="@+id/button9"
        android:layout_marginTop="18dp"
        android:textAllCaps="false"
        android:onClick="goSocket"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQLite"
        android:id="@+id/button12"
        android:layout_alignBottom="@+id/button9"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:onClick="goSQLite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SharedPreference"
        android:id="@+id/button14"
        android:layout_alignBottom="@+id/button12"
        android:layout_alignStart="@+id/button6"
        android:textAllCaps="false"
        android:onClick="goPreference"/>

</RelativeLayout>
